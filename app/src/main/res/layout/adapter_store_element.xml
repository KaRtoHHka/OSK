<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapterStoreElementOne"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/imageOfProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/linerElementAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/imageOfProduct"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameOfProduct"
            style="@style/SecondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/aboutProduct"
            style="@style/SecondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6363"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/costOfProduct"
        style="@style/SecondText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp" />
</RelativeLayout>